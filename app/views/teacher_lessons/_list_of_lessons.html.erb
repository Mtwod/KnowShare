<div class="card my-3 bg-white text-dark dashboard-right-card">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-list fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Liste des mes cours</strong></h3>
          <h3><span class="badge badge-dark mx-3"> <%= @all_users_lessons.count %></span></h3>
      </div>
      <div class="d-flex ml-auto mx-2">
        <input class="form-control mr-4" id="myInput" type="text" placeholder="Rechercher">
      </div>
    </div>
  </div>
  <div class="card-body">  
    <table class="table table-bordered table-striped text-dark">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Date de création</th>
          <th>Nombre d'inscriptions</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="myTable">
        <% @all_users_lessons.each do |lesson| %>
        <tr id="lesson-<%= lesson.id %>">
          <td><%= lesson.title %></td>
          <td><%= lesson.created_at.strftime('%d/%m/%Y') %></td>
          <td><%= lesson.bookings.count %></td>
          <td>
            <%= link_to lesson_path(lesson.id), class: "mx-2 text-danger", method: :delete, remote: true, data: {confirm: "Es-tu sûr(e) de vouloir supprimer ce cours ?"}  do %>
              <i class="fas fa-2x fa-times"></i>
            <% end %>
            <%= link_to lesson, class: "mx-2 text-info"  do %>
              <i class="fas fa-2x fa-eye"></i>
            <% end %>
            <%= link_to edit_lesson_path(lesson.id), class: "mx-2 text-warning"  do %>
              <i class="fas fa-2x fa-pencil-alt"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
