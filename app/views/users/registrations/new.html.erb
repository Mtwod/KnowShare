<div class="bg-devise">
  <div class="container d-flex align-items-center">
    <div class="col">
      <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="card p-4 mb-5 bg-white text-dark">
              <div class="text-center mb-5">
                <h3>Inscription</h3>
                <h6>Encore un petit effort, tu y es presque !</h6>
              </div>
              <span class="clearfix"></span>

              <div class="form-group">
                <label class="form-control-label"><strong>Pseudonyme</strong></label>
                <div class="input-group input-group-transparent">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                  </div>
                  <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Jeanmich", required: true %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-control-label"><strong>Adresse email</strong></label>
                <div class="input-group input-group-transparent">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                  </div>
                    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "jeanmich@exemple.com", required: true %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-control-label"><strong>Mot de passe</strong></label>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <div class="input-group input-group-transparent">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                  </div>
                    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "*********", required: true, minlength: "6" %>
                </div>
              </div>

              <div class="form-group">
                <label class="form-control-label"><strong>Confirmer le mot de passe</strong></label>
                <div class="input-group input-group-transparent">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                  </div>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "*********", required: true, minlength: "6" %>
                </div>
              </div>

              <div class="mt-3">
                <div class="d-flex justify-content-center">
                  <%= f.submit "S'inscrire", class: "btn btn-warning d-flex mx-auto mb-3 px-5" %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <button type="button" class="btn btn-secondary btn-icon">
                    <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                    <span class="btn-inner--text"><%= link_to "Page d'accueil", root_path %></span>
                  </button>

                  <div class="col-sm-5 text-sm-right">
                    <span class="small d-sm-block d-md-inline">Déjà inscrit ?</span><br>
                    <%= render "users/shared/links" %>
                  </div>
                </div>
              </div>
            
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
