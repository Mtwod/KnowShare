<div class="bg-white">
  <div class="container my-5 py-3">
    <div class="row">
      <div class="col-md-6 offset-md-3 text-dark">
        <br><br><br>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          
          <h1 class="h3 mb-5 font-weight-normal text-center">Inscription</h1>
          
          <div class="form-group">
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Pseudonyme", required: true %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email", required: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe (6 caractères minumum)", required: true, minlength: "6" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmer le mot de passe", required: true, minlength: "6" %>
          </div>
          <div class="actions mt-5">
            <%= f.submit "S'inscrire", class: "btn btn-primary d-flex mx-auto mb-3 px-5" %>
          </div>
        <% end %>
        <p>Tu as déjà un compte ?</p>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
