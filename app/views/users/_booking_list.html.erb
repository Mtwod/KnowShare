<% lesson = booking.followed_lesson %>
<div class="row border-bottom border-gray pb-2 mb-2 mr-2 align-items-center">
  <div class="col-lg-3 col-md-3 col-sm-12">
    <%= booking.start_date %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12">
    <%= lesson.title %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12">
    <% if lesson.teacher.has_first_name? %>
      <% if lesson.teacher.has_last_name? %>
        <%= lesson.teacher.first_name %> <%= lesson.teacher.last_name %>
      <% else %>
        <%= lesson.teacher.first_name %>
      <% end %>
    <% else %>
      <%= lesson.teacher.username %>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12 bg-info">
      <%= link_to lesson_booking_path(lesson.id, booking.id), class: "nav-link", style: "color: red", method: :delete, data: {confirm: "Êtes-vous sûr(e) de vouloir annuler ce cours ?", remote: true}  do %>
        <i class="fas fa-times fa-1x"></i>
      <% end %>
      <%= link_to lesson, class: "nav-link", style: "color: blue"  do %>
        <i class="fas fa-eye fa-1x"></i>
      <% end %>
  </div>
</div>