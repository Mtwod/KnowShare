<% lesson = booking.followed_lesson %>
<div class="row border-bottom border-gray py-2 mb-2 mr-2">
  <div class="col-lg-3 col-md-3 col-sm-12">
    <%= booking.start_date %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12">
    <%= lesson.title %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12">
    <% if lesson.teacher.has_first_name? %>
      <% if lesson.teacher.has_last_name? %>
        <%= lesson.teacher.first_name %> <%= lesson.teacher.last_name %>
      <% else %>
        <%= lesson.teacher.first_name %>
      <% end %>
    <% else %>
      <%= lesson.teacher.username %>
    <% end %>
  </div>
  <div class="col-lg-3 col-md-3 col-sm-12">
    <%= link_to "Annuler ce cours", booking, class: "btn btn-danger mx-2 my-2", method: :delete %>
    <%= link_to  "Voir le cours", lesson, class:"btn btn-outline-info mx-2 my-2" %>
  </div>
</div>