<div class="card my-3 bg-white text-dark">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-chalkboard-teacher fa-3x"></i>
      </div>
      <div class="mx-2 d-flex align-self-center">
          <h3><strong>Mon dashboard prof</strong></h3>
      </div>
    </div>
  </div>
  
  <div class="card-body">
    <h4>Mes cours à venir</h4>
    
    <div class="bg-white rounded box-shadow">
      <% if current_user.future_given_bookings? %>
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Date du cours</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Titre du cours</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Nom de l'élève</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Actions</strong>
          </div>
        </div>
        <% current_user.future_given_bookings.each do |booking| %>
          <%= render 'booking_list_teacher', booking: booking %>
        <% end %>
      <% else %>
        <p>Tu n'as encore aucun cours de prévu !</p>
        <hr>
      <% end %>
    </div>
  
    <h4>Mes cours passés</h4>

    <div class="bg-white rounded box-shadow">
      <% if current_user.past_given_bookings? %>
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Date du cours</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Titre du cours</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Nom du professeur</strong>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-12">
            <strong>Actions</strong>
          </div>
        </div>
        <% current_user.past_given_bookings.each do |booking| %>
          <%= render 'booking_list_teacher', booking: booking %>
        <% end %>
      <% else %>
        <p>Tu n'as encore jamais pris de cours</p>
        <hr>
      <% end %>
    </div>
  </div>
</div>