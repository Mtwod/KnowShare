<div class="bg-white">
  <div class="container my-5 py-3">
    <div class="row">
      <div class="col-md-6 offset-md-3 text-dark">
        <br><br><br>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <h1 class="h3 mb-5 font-weight-normal text-center">Changer mon mot de passe</h1>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe (6 caractÃ¨res minumum)", required: true, minlength: "6" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmer le mot de passe", required: true, minlength: "6" %>
          </div>

          <div class="actions">
            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary d-flex mx-auto mb-3 px-5 mt-5" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>

      </div>
    </div>
  </div>
</div>
