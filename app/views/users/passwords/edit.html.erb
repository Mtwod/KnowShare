<div class="bg-devise">
  <div class="container d-flex align-items-center">
    <div class="col">
      <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
          <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="card p-4 mb-5 bg-white text-dark">
              <div class="text-center mb-5">
                <h3>Mot de passe oublié ?</h3>
                <h6>Aucun problème, on s'en occupe ! Un email te sera envoyé avec des instructions pour le récupérer</h6>
              </div>
              <span class="clearfix"></span>

              <div class="form-group">
                <label class="form-control-label"><strong>Adresse email</strong></label>
                <div class="input-group input-group-transparent">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-at"></i></span>
                  </div>
                    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "jeanmich@exemple.com", required: true %>
                </div>
              </div>

              <div class="mt-3">
                <div class="d-flex justify-content-center">
                  <%= f.submit "Envoyer les instructions", class: "btn btn-warning d-flex mx-auto mb-3" %>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                  <button type="button" class="btn btn-secondary btn-icon">
                    <span class="btn-inner--icon"><i class="fas fa-arrow-left"></i></span>
                    <span class="btn-inner--text"><%= link_to "Page d'accueil", root_path %></span>
                  </button>

                  <div class="col-sm-5 text-sm-right">
                    <%= render "users/shared/links" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="bg-white">
  <div class="container my-5 py-3">
    <div class="row">
      <div class="col-md-6 offset-md-3 text-dark">
        <br><br><br>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <h1 class="h3 mb-5 font-weight-normal text-center">Changer mon mot de passe</h1>

          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe (6 caractères minumum)", required: true, minlength: "6" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmer le mot de passe", required: true, minlength: "6" %>
          </div>

          <div class="actions">
            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary d-flex mx-auto mb-3 px-5 mt-5" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>

      </div>
    </div>
  </div>
</div>
