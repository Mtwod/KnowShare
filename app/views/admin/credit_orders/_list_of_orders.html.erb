<div class="card my-3 bg-white text-dark">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-list fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Liste des commandes</strong></h3>
          <h3><span class="badge badge-dark mx-3"> <%= @orders.count %></span></h3>
      </div>
      <div class="d-flex ml-auto mx-2">
        <input class="form-control" id="myInput" type="text" placeholder="Rechercher">
      </div>
    </div>
  </div>
  <div class="card-body" style="overflow: scroll; height: 75vh;">  
    <table class="table table-bordered table-striped text-dark">
      <thead>
        <tr>
          <th>ID</th>
          <th>Date</th>
          <th>Acheteur</th>
          <th>Formule</th>
          <th>Montant</th>
        </tr>
      </thead>
      <tbody id="myTable">
      <% @orders.each do |order| %>
        <tr id="oder-<%= order.id %>">
          <td><%= order.id %></td>
          <td><%= order.display_start_date_time %></td>
          <td><%= order.user.username %></td>
          <td><%= Display::PricingOptions.new(credit_order: order).call %></td>
          <td><%= order.price %> â‚¬</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>