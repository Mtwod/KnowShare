<div class="card my-3 bg-white text-dark">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="far fa-chart-bar fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Statistiques</strong></h3>
      </div>
    </div>
  </div>
  <div class="card-body" style="overflow: scroll; height: auto">    
    <div class="bg-white rounded box-shadow">
      <div class="col-lg-12 col-md-12 col-sm-12">

        <div class="row pt-2 mb-2 mr-2">
          <strong>Dernier utilisateur inscrit</strong>
        </div>
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <%= User.last.display_name %>        
        </div>

        <div class="row pt-2 mb-2 mr-2">
          <strong>Dernier cours crée</strong>
        </div>
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <%= Lesson.last.title %>        
        </div>

        <div class="row pt-2 mb-2 mr-2">
          <strong>Nombre de réservations de cours</strong>
        </div>
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <%= @bookings.count %>        
        </div>
      </div>
    </div>
  </div>
</div>