<div class="card my-3 bg-white text-dark">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-chalkboard-teacher fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Liste des cours en ligne</strong></h3>
      </div>
    </div>
  </div>
  <div class="card-body" style="overflow: scroll; height: 300px;">    
    <div class="bg-white rounded box-shadow">
        <div class="row border-bottom border-gray py-2 mb-2 mr-2">
          <div class="col-lg-4 col-md-4 col-sm-12">
            <strong>Titre</strong>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <strong>EnseignÃ© par :</strong>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-12">
            <strong> Actions </strong>
          </div>
        </div>
        <% @lessons.each do |lesson| %>
          <div class="row border-bottom border-gray pb-2 mb-2 mr-2 align-items-center">
            <div class="col-lg-4 col-md-4 col-sm-12">
              <%= lesson.title %>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
              <%= lesson.teacher.display_name %>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <%= link_to lesson_path(lesson.id), class: "mx-2 text-danger", method: :delete, data: {confirm: "Es-tu sÃ»r(e) de vouloir supprimer ce cours ?"}  do %>
                  <i class="fas fa-times fa-2x"></i>
                <% end %>
                <%= link_to lesson, class: "mx-2 text-info"  do %>
                  <i class="fas fa-eye fa-2x"></i>
                <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>