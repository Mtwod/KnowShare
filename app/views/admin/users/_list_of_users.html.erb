<div class="card my-3 bg-white text-dark dashboard-right-card">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-list fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Liste des utilisateurs</strong></h3>
          <h3><span class="badge badge-dark mx-3"> <%= @users.count %></span></h3>
      </div>
      <div class="d-flex ml-auto mx-2">
        <input class="form-control" id="myInput" type="text" placeholder="Rechercher">
      </div>
    </div>
  </div>
  <div class="card-body">  
    <table class="table table-bordered table-striped text-dark ">
      <thead>
        <tr>
          <th>ID</th>
          <th>Pseudonyme</th>
          <th>Prénom</th>
          <th>Nom</th>
          <th>Adresse email</th>
          <th>Date d'inscription</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="myTable">
        <% @users.each do |user| %>
        <tr id="user-<%= user.id %>">
          <td class="align-middle"><%= user.id %></td>
          <td class="align-middle"><%= user.username %></td>
          <td class="align-middle"><%= user.display_first_name %></td>
          <td class="align-middle"><%= user.display_last_name %></td>
          <td class="align-middle"><%= user.email %></td>
          <td class="align-middle"><%= user.created_at.strftime('%d/%m/%Y') %></td>
          <td class="align-middle">
            <%= link_to admin_user_path(user.username), class: "mx-2 text-danger", method: :delete, remote: true, data: {confirm: "Es-tu sûr(e) de vouloir supprimer cet utilisateur ?"} do %>
              <i class="fas fa-times fa-2x"></i>
            <% end %>
            <%= link_to admin_user_path(user.username), class: "mx-2 text-info"  do %>
              <i class="fas fa-eye fa-2x"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
