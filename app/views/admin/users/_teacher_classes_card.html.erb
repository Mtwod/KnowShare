<div class="card my-3 bg-white text-dark admin-dashboard-user-profile-show">
  <div class="card-header bg-white">
    <div class="row">
      <div class="mx-2">
        <i class="fas fa-chalkboard-teacher fa-3x"></i>
      </div>
      <div class="d-flex mx-2">
          <h3><strong>Son dashboard prof</strong></h3>
      </div>
    </div>
  </div>
  
  <div class="card-body">
    <h4>Ses cours à venir</h4>
    <% if !@user.future_teacher_bookings.any? %>
      <p>Tu n'as encore aucun cours de prévu !</p>
      <hr>
    <% else %>
      <table class="table table-bordered table-striped text-dark">
        <thead>
          <tr>
            <th>Date du cours</th>
            <th>Titre du cours</th>
            <th>Nom du professeur</th>
            <th>Durée du cours</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="myTable">
          <% @user.future_teacher_bookings.each do |booking| %>
            <%= render 'admin/users/booking_list_teacher', booking: booking %>
          <% end %>
      </table>
    <% end %>

    <h4>Ses cours passés</h4>

    <% if !@user.past_teacher_bookings.any? %>
      <p>Tu n'as encore jamais donné de cours</p>
      <hr>
    <% else %>
      <table class="table table-bordered table-striped text-dark">
        <thead>
          <tr>
            <th>Date du cours</th>
            <th>Titre du cours</th>
            <th>Nom de l'élève</th>
            <th>Durée du cours</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="myTable2">
          <% @user.past_teacher_bookings.each do |booking| %>
            <%= render 'admin/users/booking_list_teacher', booking: booking %>
          <% end %>
      </table>
    <% end %>
  </div>
</div>
