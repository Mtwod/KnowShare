<div class="bg-white">
  <div class="container my-5 py-3 text-dark">
      <h3 class="h3 mb-5 font-weight-normal text-center">Cr√©er un nouveau cours</h3>

    <div class="row ml-3">
      <div class="offset-md-3 col-md-6 offset-md-3">
        <%= form_with model: @lesson, class: "form", id: "contact-form" do |f| %>
          <div class="form-group">
            <%= f.text_field :title, class: "form-control", placeholder: "Titre du cours", required: true, minlength: "10" %>
          </div>
          <div class="form-group">
            <%= f.text_area :description, class: "form-control", rows: "7", placeholder: "Description du cours", required: true, minlength: "20", maxlength: "5000" %>
          </div>
          <div class="form-group text-center my-4">
            <%= f.label "Ajouter une image", class: "form-label" %>
            <br>
            <%= f.file_field :picture, accept: 'image/png,image/gif,image/jpeg'%>
          </div>
          <div class="actions mt-5">
            <%= f.submit "Publier mon cours", class: "btn btn-primary d-flex mx-auto mb-3" %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>