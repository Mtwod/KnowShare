<div class="card mb-3 bg-white text-dark text-center">
  <div class="card-body">
    <h5 class="card-title">Inscris-toi à ce cours</h5>
    
    <%= render 'calendar', local: @schedules %>

    <%= form_for [ @lesson, @booking ] do |f| %>
      <div class="form-group">
        <%= f.label "Choisis un horaire :" %><br/>
        <%= f.datetime_select :start_date, :minute_step => 30, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Choisis une durée : " %><br/>
        <%= f.time_select :duration, :minute_step => 30, class: "form-control" %><br/>
        <small class="text-danger">* par tranche de 30 minutes et maximum 2 heures</small>
      </div>
      <div class="form-group d-flex">
        <%= button_to "Je m'inscris", lesson_bookings_path(@lesson), :class => "btn btn-warning mx-auto px-5" %>
      </div>
    <% end %>
    </div>

  </div>
</div>
