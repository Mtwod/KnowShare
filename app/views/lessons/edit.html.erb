<div class="container my-5">
    <h3 class="text-center mb-4"><u>Modifier <%= @lesson.title %></u></h3>

  <div class="row ml-3">
    <div class="offset-md-3 col-md-6 offset-md-3">
      <%= form_with model: @lesson, class: "form", id: "contact-form" do |f| %>
        <div class="form-group">
          <%= f.label "Titre du cours (min 10 charactÃ¨res)", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", value: @lesson.title %>
        </div>
        <div class="form-group">
          <%= f.label "Description", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: "7", value: @lesson.description, minlength: "20", maxlength: "5000" %>
        </div>
        <div class="form-group text-center my-3">
          <%= f.label "Modifier l'image", class: "form-label" %>
          <br>
          <%= f.file_field :picture, accept: 'image/png,image/gif,image/jpeg'%>
        </div>
        <div class="text-center">
          <%= f.submit "Valider les modifications", class: "btn btn-primary px-5" %>
        </div>
      <%end%>
    </div>
  </div>
</div>